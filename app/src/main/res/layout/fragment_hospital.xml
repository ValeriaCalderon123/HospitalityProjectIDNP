<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.hospitals.HospitalFragment"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/txtTituloHospitalEnReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Reserva Hospital del Niño" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Spinner
        android:id="@+id/spnCategoriasPorHospital"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <EditText
        android:id="@+id/edtSeleccionarFechaDeReserva"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="@string/reserve_date_attention"
        android:focusable="false"
        android:clickable="true"
        android:maxLines="1"
        android:inputType="date" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TimePicker
        android:id="@+id/inpSeleccionHoraDeReserva"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <EditText
        android:id="@+id/edtCodigoDePagoReserva"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Ingrese código de pago"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnReservarCitaEnHospital"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="Reservar Cita" />
</LinearLayout>