<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#e6f5fa"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_hospital_svgrepo_com" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:text="Nombre del Hospital"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/altitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:text="Altitud" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/card_view_hospital_buttonEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="#e6f5fa"
            android:foregroundTint="@color/black"
            android:src="@mipmap/ic_launcher_foreground">

        </androidx.appcompat.widget.AppCompatImageButton>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/card_view_hospital_buttonDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/card_view_hospital_buttonEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="#e6f5fa"
            android:foregroundTint="@color/black"
            android:src="@drawable/ic_icons8_trash">

        </androidx.appcompat.widget.AppCompatImageButton>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


